<div class="container" id="ProductsContainer">
  <div class="row">

    <div class="col-md-3">
      <h3>Categorias</h3>
      <ul class="list-group">
        <% @categories.each do |category| %>
          <li class="list-group-item"> <%= link_to category.name, root_path(category_id: category.id) %> </li>
        <% end %>
      </ul>
    </div>

    <div class="col-md-9">
      <% if @products.size > 0 %>
        <% @products.each do |product| %>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <%= image_tag product.image.url(:thumb), class: 'image-responsive' %>
              <div class="caption">
                <h3> <%= product.name %> </h3>
                <p class="description"> <%= product.description%> </p>
                <p> <%= link_to 'Comprar por'+ number_to_currency(product.price, precision: 0), purchases_path(product_id: product.id), method: :post, Class: 'btn btn-primary' %> </p>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <h2 class="text-center">Esta tienda estÃ¡ grave de surtido</h2>
      <% end %>
    </div>
  </div>
</div>
